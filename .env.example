# Environment Configuration Template
# GL Layer: Environment (GL90-99 Meta-Specification)
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real secrets to version control

# ============================================================================
# Database Configuration (GL10-29 Operational)
# ============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=machine_native_ops
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_database_password_here

# ============================================================================
# API Configuration (GL10-29 Operational)
# ============================================================================
API_SECRET_KEY=generate_secure_secret_key_here_min_32_chars
API_ENCRYPTION_KEY=generate_encryption_key_here_min_32_chars

# ============================================================================
# Authentication (GL10-29 Operational)
# ============================================================================
AUTH_TOKEN=generate_auth_token_here
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Third-party Integrations (GL81-83 Extended)
# ============================================================================
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# AWS Configuration (GL81-83 Extended)
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# ============================================================================
# Security Settings (GL50-59 Observability)
# ============================================================================
SECURITY_ENCRYPTION_ALGORITHM=AES-256-GCM
SECURITY_HASH_ALGORITHM=SHA-256
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_PASSWORD_REQUIRE_SPECIAL_CHAR=true

# ============================================================================
# Application Settings (GL10-29 Operational)
# ============================================================================
APP_ENV=development
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# ============================================================================
# Monitoring & Observability (GL50-59 Observability)
# ============================================================================
SENTRY_DSN=your_sentry_dsn_here
LOGGING_ENDPOINT=your_logging_endpoint_here

# ============================================================================
# MCP Configuration (GL81-83 Extended)
# ============================================================================
MCP_SERVER_URL=http://localhost:8080
MCP_API_KEY=your_mcp_api_key_here

# ============================================================================
# Enterprise Features (GL00-09 Strategic)
# ============================================================================
ENTERPRISE_LICENSE_KEY=your_license_key_here
ENTERPRISE_TENANT_ID=your_tenant_id_here

# ============================================================================
# Governance Configuration (GL10-29 Operational)
# ============================================================================
GOVERNANCE_POLICY_ENFORCEMENT=true
GOVERNANCE_AUDIT_LOGGING=true

# ============================================================================
# Development Tools (GL30-49 Execution)
# ============================================================================
DEV_HOT_RELOAD=true
DEV_MOCK_EXTERNAL_SERVICES=false

# ============================================================================
# Security Notes (GL90-99 Meta-Specification)
# ============================================================================
# 1. Generate secure random keys using:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# 2. For production, use a secret management system like:
#    - AWS Secrets Manager
#    - Azure Key Vault
#    - HashiCorp Vault
#    - Environment variables provided by your cloud provider
#
# 3. Never share these values in:
#    - Chat messages
#    - Email
#    - Unencrypted storage
#    - Git commits
#
# 4. Rotate secrets regularly:
#    - API keys: Every 90 days
#    - Database passwords: Every 180 days
#    - JWT secrets: Every 90 days

# ============================================================================
# Governance Quantum Stack (GQS) Configuration
# ============================================================================
GOVERNANCE_MODE=strict
EVIDENCE_COVERAGE_THRESHOLD=0.95
AUTO_FIX_ENABLED=true
AUTO_MERGE_ENABLED=false
GOVERNANCE_MODEL=GQS

# ============================================================================
# OPA Configuration
# ============================================================================
OPA_SERVER_URL=http://localhost:8181
OPA_BUNDLE_DIR=ecosystem/contracts/policies/

# ============================================================================
# Conftest Configuration
# ============================================================================
CONFTEST_POLICY_DIR=ecosystem/contracts/policies/
CONFTEST_TIMEOUT=30s

# ============================================================================
# SLA Configuration
# ============================================================================
SLA_RESPONSE_TIME_THRESHOLD=300
SLA_FIX_RATE_THRESHOLD=0.95
SLA_VIOLATION_ALERT=true

# ============================================================================
# CI/CD Configuration
# ============================================================================
CI_TIMEOUT_MINUTES=30
WORKFLOW_CONCURRENCY=1
RETRY_COUNT=3
RETRY_DELAY=5

# ============================================================================
# Supply Chain Security
# ============================================================================
COSIGN_PUBLIC_KEY=your_cosign_public_key_here
SBOM_GENERATION_ENABLED=true
ATTESTATION_ENABLED=true
PROVENANCE_ENABLED=true

# ============================================================================
# Monitoring Configuration
# ============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# Audit Trail Configuration
# ============================================================================
AUDIT_DB_PATH=ecosystem/governance/audit.db
STATE_DB_PATH=ecosystem/governance/state.db
AUDIT_LOG_RETENTION_DAYS=90
