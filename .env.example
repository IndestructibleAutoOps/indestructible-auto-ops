# ========================================================================
# INDESTRUCTIBLEAUTOOPS ENVIRONMENT CONFIGURATION
# GL Layer: Environment (GL90-99 Meta-Specification)
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real secrets to version control
# ========================================================================

# --------------------------------------------------------------------------
# APPLICATION SETTINGS (GL10-29 Operational)
# --------------------------------------------------------------------------
NODE_ENV=development
PORT=4000
LOG_LEVEL=info
LOG_FORMAT=json

# --------------------------------------------------------------------------
# DATABASE CONFIGURATION (GL10-29 Operational)
# --------------------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=machine_native_ops
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_database_password_here

# Connection String (Production - use environment-specific value)
# DATABASE_URL=postgresql://user:password@host:5432/database

# --------------------------------------------------------------------------
# API & AUTHENTICATION (GL10-29 Operational)
# --------------------------------------------------------------------------
API_SECRET_KEY=generate_secure_secret_key_here_min_32_chars
API_ENCRYPTION_KEY=generate_encryption_key_here_min_32_chars
AUTH_TOKEN=generate_auth_token_here
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRATION_HOURS=24

# --------------------------------------------------------------------------
# GITHUB INTEGRATION (GL81-83 Extended)
# --------------------------------------------------------------------------
# Personal Access Token for repository operations
GITHUB_TOKEN=your_github_pat_here
# Token for CI/CD operations
GITHUB_CI_TOKEN=your_github_ci_pat_here
# Token for integration tools (Aider, OpenHands, etc.)
GITHUB_INTEGRATION_TOKEN=your_github_integration_pat_here
# Webhook secret for GitHub Events
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# --------------------------------------------------------------------------
# AI SERVICE INTEGRATIONS (GL81-83 Extended)
# --------------------------------------------------------------------------
# OpenAI API Key (Primary AI Service)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude API Key (Secondary AI Service)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=8192

# Google AI API Key (Optional - Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# Hugging Face API Key (Optional - Open Source Models)
HF_API_KEY=hf_your_huggingface_token_here
HF_INFERENCE_ENDPOINT=https://your-space.hf.space

# --------------------------------------------------------------------------
# SEMANTIC & VECTOR DATABASE (GL40-49 Semantic)
# --------------------------------------------------------------------------
# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=indestructible-autoops

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# --------------------------------------------------------------------------
# AWS CONFIGURATION (GL81-83 Extended)
# --------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# --------------------------------------------------------------------------
# CACHE & QUEUE (GL30-39 Performance)
# --------------------------------------------------------------------------
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# --------------------------------------------------------------------------
# SECURITY SETTINGS (GL50-59 Observability)
# --------------------------------------------------------------------------
SECURITY_ENCRYPTION_ALGORITHM=AES-256-GCM
SECURITY_HASH_ALGORITHM=SHA-256
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_PASSWORD_REQUIRE_SPECIAL_CHAR=true

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=3600000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# --------------------------------------------------------------------------
# MONITORING & OBSERVABILITY (GL50-59 Observability)
# --------------------------------------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
SENTRY_ENVIRONMENT=development

# PostHog Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# --------------------------------------------------------------------------
# EMAIL NOTIFICATIONS (Optional)
# --------------------------------------------------------------------------
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=noreply@indestructibleautoops.com

# --------------------------------------------------------------------------
# FILE STORAGE (GL70-79 Infrastructure)
# --------------------------------------------------------------------------
# Storage Provider: local, s3, supabase, r2
FILE_STORAGE_PROVIDER=local
FILE_STORAGE_PATH=./uploads

# AWS S3 Configuration
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1

# Supabase Storage Configuration
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --------------------------------------------------------------------------
# FEATURE FLAGS (GL10-29 Operational)
# --------------------------------------------------------------------------
FEATURE_AI_ANALYSIS=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_GRAPH_QUERY=true
FEATURE_EXPORT_PDF=true
FEATURE_REAL_TIME_SYNC=true

# --------------------------------------------------------------------------
# WORKER & QUEUE CONFIGURATION (GL30-39 Performance)
# --------------------------------------------------------------------------
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_RETRY_DELAY_MS=5000

# --------------------------------------------------------------------------
# COST CONTROL (GL70-79 Infrastructure)
# --------------------------------------------------------------------------
# AI API Budget Control (USD per user per month)
AI_BUDGET_FREE=0
AI_BUDGET_STARTER=5
AI_BUDGET_PROFESSIONAL=20
AI_BUDGET_ENTERPRISE=100

# --------------------------------------------------------------------------
# WEBHOOK CONFIGURATION (GL81-83 Extended)
# --------------------------------------------------------------------------
WEBHOOK_SECRET=your_webhook_secret_for_external_integrations
WEBHOOK_TIMEOUT_MS=30000

# --------------------------------------------------------------------------
# OAUTH CONFIGURATION (Optional - GL10-29 Operational)
# --------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth
GITHUB_OAUTH_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_OAUTH_CLIENT_SECRET=your_github_oauth_client_secret_here

# --------------------------------------------------------------------------
# DEVELOPMENT & TESTING
# --------------------------------------------------------------------------
# Test Database Override
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/indestructible_test

# Enable Debug Mode (Production: false)
DEBUG_MODE=true

# --------------------------------------------------------------------------
# PRODUCTION OVERRIDES
# --------------------------------------------------------------------------
# Copy these values to your production environment secrets
# NODE_ENV=production
# DEBUG_MODE=false
# LOG_LEVEL=warn
# ALLOWED_ORIGINS=https://app.indestructibleautoops.com
# DATABASE_URL=[Production Connection String]
# REDIS_URL=[Production Redis URL]
# NEO4J_URI=[Production Neo4j URI]
# AWS_ACCESS_KEY_ID=[Production AWS Key]
# AWS_SECRET_ACCESS_KEY=[Production AWS Secret]