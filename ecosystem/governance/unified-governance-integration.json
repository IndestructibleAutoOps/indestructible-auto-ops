      },
      "edges": {
        "enforces": {
          "source": "GOVERNANCE",
          "target": "ARTIFACT",
          "attributes": ["enforcement_level", "validation_rules"]
        },
        "validates": {
          "source": "LAYER",
          "target": "ARTIFACT",
          "attributes": ["validation_rules", "gl_binding"]
        },
        "depends_on": {
          "source": "LAYER",
          "target": "LAYER",
          "attributes": ["dependency_type", "required"]
        }
      }
    },
    "topology_validation": {
      "rules": [
