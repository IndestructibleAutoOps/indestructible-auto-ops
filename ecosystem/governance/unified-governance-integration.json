  "NAMING_CONVENTIONS": {
    "naming_rules": {
      "gl_anchors": {
        "pattern": "GL[0-9]{2}",
        "description": "GL anchor naming: GL00-GL99",
        "examples": ["GL00", "GL50", "GL99"],
        "gl_binding": ["GL60"]
      },
      "artifacts": {
        "pattern": "[a-z][a-z0-9-]*\\.(yaml|json|md|py|sh)",
        "description": "Artifact naming: lowercase with hyphens",
        "examples": ["governance-baseline.json", "meta-spec.yaml"],
        "gl_binding": ["GL60"]
      },
      "layers": {
        "pattern": "L[0-9]{2}(-[a-z]+)?",
        "description": "Layer naming: L00-L99 with optional suffix",
        "examples": ["L00-language", "L50-format"],
        "gl_binding": ["GL60"]
      },
      "schemas": {
        "pattern": "[a-z][a-z0-9-]*\\.schema\\.json",
        "description": "Schema naming: lowercase with .schema.json suffix",
        "examples": ["governance.schema.json", "meta-format.schema.json"],
        "gl_binding": ["GL50", "GL60"]
      },
      "contracts": {
        "pattern": "[a-z][a-z0-9-]*-contract\\.(yaml|json)",
        "description": "Contract naming: lowercase with -contract suffix",
        "examples": ["governance-contract.yaml", "adapter-contract.json"],
        "gl_binding": ["GL36", "GL54"]
      }
    },
    "validation": {
      "enforcement": "MANDATORY",
      "validation_rule": "naming-convention-validation",
      "gl_binding": ["GL60", "GL65"]
    }
  },
