{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "indestructibleautoops.pipeline.schema.json",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": { "type": "string" },
    "kind": { "const": "Pipeline" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": { "name": { "type": "string", "minLength": 1 } }
    },
    "spec": {
      "type": "object",
      "required": [
        "projectRoot",
        "stateDir",
        "evidenceDir",
        "eventStream",
        "dag",
        "inputs",
        "outputs",
        "governance"
      ],
      "properties": {
        "projectRoot": { "type": "string" },
        "stateDir": { "type": "string" },
        "evidenceDir": { "type": "string" },
        "eventStream": { "type": "string" },
        "dag": {
          "type": "object",
          "required": ["nodes"],
          "properties": {
            "nodes": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["id", "kind", "run", "deps"],
                "properties": {
                  "id": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
                  "kind": { "type": "string", "enum": ["step"] },
                  "run": { "type": "string", "minLength": 1 },
                  "deps": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "inputs": { "type": "object" },
        "outputs": { "type": "object" },
        "governance": { "type": "object" }
      }
    }
  }
}