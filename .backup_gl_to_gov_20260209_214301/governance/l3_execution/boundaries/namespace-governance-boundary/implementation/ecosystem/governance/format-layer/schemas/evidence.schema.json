{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.machinenativeops.com/evidence/v1.0.0.json",
  "title": "Evidence Schema",
  "description": "Schema for governance enforcement evidence",
  "version": "1.0.0",
  "semantic_anchor": "FORMATLAYER.SCHEMA.EVIDENCE",

  "type": "object",
  "required": ["evidence_id", "timestamp", "result", "hash"],

  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^ev-[a-z0-9-]+$",
      "description": "Unique evidence identifier"
    },
    
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp when evidence was generated"
    },
    
    "result": {
      "type": "string",
      "enum": ["PASS", "FAIL", "WARNING"],
      "description": "Validation result"
    },
    
    "hash": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 hash of evidence content"
    },
    
    "details": {
      "type": "object",
      "description": "Detailed evidence information",
      
      "properties": {
        "rule_name": {
          "type": "string"
        },
        
        "severity": {
          "type": "string",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
        },
        
        "enforcement": {
          "type": "string",
          "enum": ["BLOCK", "WARN", "LOG"]
        },
        
        "resource": {
          "type": "string",
          "description": "Resource that was validated"
        },
        
        "actor": {
          "type": "string",
          "description": "Actor who triggered validation"
        },
        
        "violations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "message": { "type": "string" },
              "location": { "type": "string" },
              "code": { "type": "string" }
            }
          }
        }
      }
    },
    
    "attachments": {
      "type": "array",
      "description": "Evidence attachments",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "url": { "type": "string" },
          "hash": { "type": "string" }
        }
      }
    }
  }
}