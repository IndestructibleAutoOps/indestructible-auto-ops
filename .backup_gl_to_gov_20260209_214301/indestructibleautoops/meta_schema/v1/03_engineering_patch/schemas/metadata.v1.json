{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://indestructibleautoops.com/schemas/common/metadata/v1.json",
  "title": "IndestructibleAutoOps Common Metadata v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
      "maxLength": 63
    },
    "namespace": {
      "type": "string",
      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
      "maxLength": 63,
      "default": "default"
    },
    "labels": {
      "type": "object",
      "default": {},
      "patternProperties": {
        "^[a-z0-9.-]+/[a-z0-9-]+$": { "type": "string" }
      },
      "additionalProperties": false
    },
    "annotations": {
      "type": "object",
      "default": {},
      "patternProperties": {
        "^[a-z0-9.-]+/[a-z0-9-]+$": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
