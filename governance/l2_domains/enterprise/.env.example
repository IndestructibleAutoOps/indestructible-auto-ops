# Enterprise DevSecOps Governance Framework - Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME="Enterprise Governance Framework"
APP_VERSION="1.0.0"
APP_ENV="development"
DEBUG=true
LOG_LEVEL="INFO"

# ============================================
# API CONFIGURATION
# ============================================
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
API_RATE_LIMIT="60"

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Main Database
DATABASE_TYPE="postgresql"
DATABASE_URL="postgresql://iaops:secure_password@localhost:5432/indestructibleautoops"
DATABASE_POOL_SIZE=20
DATABASE_ECHO=false

# Audit Database
AUDIT_DATABASE_URL="postgresql://iaops:secure_password@localhost:5432/iaops_audit"

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# ============================================
# GOVERNANCE CONFIGURATION
# ============================================
GOVERNANCE_ENABLED=true
EVIDENCE_DIR="./data/evidence"
ARCHIVE_DIR="./data/evidence/archives"
HASH_ALGORITHMS="sha3-512,blake3"
REPLAY_ENABLED=true
AUDIT_TRAIL_ENABLED=true

# ============================================
# BOUNDARY CONFIGURATION
# ============================================
BOUNDARIES_ENABLED=true
DEFAULT_BOUNDARY="enterprise-default"
STRICT_MODE=false

# ============================================
# AI/ML MODEL CONFIGURATION
# ============================================
# OpenAI
OPENAI_API_KEY=""
OPENAI_MODELS="gpt-4,gpt-3.5-turbo"

# Anthropic
ANTHROPIC_API_KEY=""
ANTHROPIC_MODELS="claude-2,claude-instant"

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Encryption
ENCRYPTION_ALGORITHM="AES-256-GCM"
ENCRYPTION_KEY_ROTATION_DAYS=90

# Authentication
AUTH_ENABLED=true
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_TOKEN_EXPIRY_HOURS=24

# API Keys
API_KEY_SECRET="your-api-key-secret-change-in-production"

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_FORMAT="json"
LOG_LEVEL="INFO"

# Tracing
TRACING_ENABLED=false
TRACING_PROVIDER="jaeger"
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# Grafana
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="admin"
GRAFANA_PORT=3000

# ============================================
# COMPLIANCE CONFIGURATION
# ============================================
COMPLIANCE_REGULATIONS="GDPR,HIPAA,SOC2"
AUDIT_RETENTION_DAYS=365
AUDIT_AUTO_EXPORT=true

# Reporting
REPORTING_DAILY=true
REPORTING_WEEKLY=true
REPORTING_MONTHLY=true

# ============================================
# STORAGE CONFIGURATION
# ============================================
STORAGE_EVIDENCE_TYPE="filesystem"
STORAGE_EVIDENCE_PATH="./data/evidence"

STORAGE_ARTIFACTS_TYPE="filesystem"
STORAGE_ARTIFACTS_PATH="./data/artifacts"

STORAGE_CACHE_TYPE="redis"
STORAGE_CACHE_URL="redis://localhost:6379/0"

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
# Slack
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL="#governance-alerts"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="governance@example.com"

# PagerDuty
PAGERDUTY_API_KEY=""
PAGERDUTY_SERVICE_KEY=""

# ============================================
# CI/CD INTEGRATION
# ============================================
GITHUB_TOKEN=""
GITHUB_WEBHOOK_SECRET=""

GITLAB_TOKEN=""
GITLAB_WEBHOOK_SECRET=""

# ============================================
# EXTERNAL SERVICES
# ============================================
# SonarQube
SONARQUBE_URL="http://localhost:9000"
SONARQUBE_TOKEN=""

# Security Scanners
TRIVY_VERSION="latest"
GRYPE_VERSION="latest"

# ============================================
# TELEMETRY
# ============================================
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=""

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
DEV_MODE=true
DEV_RELOAD=true
DEV_AUTO_RESTART=false

# ============================================
# PERFORMANCE SETTINGS
# ============================================
MAX_WORKERS=8
TASK_TIMEOUT_SECONDS=300
BATCH_SIZE=100
ASYNC_TASKS_ENABLED=true

# ============================================
# ADVANCED SETTINGS
# ============================================
# Feature Flags
FEATURE_AI_ROUTING=true
FEATURE_AUTO_RECOVERY=true
FEATURE_SMART_SCALING=true
FEATURE_PREDICTIVE_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000