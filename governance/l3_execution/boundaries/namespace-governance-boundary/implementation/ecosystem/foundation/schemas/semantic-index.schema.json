{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://machine-native-ops.io/schemas/semantic-index.json",
  "title": "Semantic Index Schema",
  "description": "Schema for semantic-index.json - Semantic index files in the governance ecosystem",
  "type": "object",
  "required": ["anchors", "relations"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "anchors": {
      "type": "array",
      "description": "List of semantic anchors",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "description": "Simple anchor reference"
          },
          {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Anchor identifier"
              },
              "type": {
                "type": "string",
                "description": "Anchor type",
                "enum": ["entity", "rule", "contract", "evidence", "adapter"]
              },
              "path": {
                "type": "string",
                "description": "File path to anchor"
              },
              "layer": {
                "type": "string",
                "description": "GL layer",
                "pattern": "^GL\\d{2}-\\d{2}$"
              },
              "semantic": {
                "type": "string",
                "description": "Semantic tag"
              }
            }
          }
        ]
      }
    },
    "relations": {
      "type": "array",
      "description": "List of semantic relations between anchors",
      "items": {
        "type": "object",
        "required": ["source", "target", "type"],
        "properties": {
          "source": {
            "type": "string",
            "description": "Source anchor ID"
          },
          "target": {
            "type": "string",
            "description": "Target anchor ID"
          },
          "type": {
            "type": "string",
            "description": "Relation type",
            "enum": ["depends_on", "validates", "produces", "consumes", "extends", "implements"]
          },
          "metadata": {
            "type": "object",
            "description": "Additional relation metadata"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Index metadata",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "scope": {
          "type": "string",
          "description": "Index scope (module, layer, global)"
        }
      }
    }
  },
  "additionalProperties": false
}
