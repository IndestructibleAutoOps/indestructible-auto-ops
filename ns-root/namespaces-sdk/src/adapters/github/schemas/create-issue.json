{
  "_gl_metadata": {
    "gl_layer": "GL-00-NAMESPACE",
    "gl_module": "ns-root/namespaces-sdk/src/adapters/github/schemas",
    "gl_semantic_anchor": "GL-00-GITHUB_SCHEMAS_CREATEISSUE",
    "gl_evidence_required": false,
    "gl_charter": "GL Unified Charter Activated"
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://namespace-sdk.io/schemas/github/create-issue/v1.0.0",
  "title": "GitHub Create Issue",
  "description": "Schema for creating a GitHub issue",
  "type": "object",
  "properties": {
    "repository": {
      "type": "string",
      "description": "Repository in format owner/repo",
      "pattern": "^[^/]+/[^/]+$",
      "examples": [
        "octocat/Hello-World"
      ]
    },
    "title": {
      "type": "string",
      "description": "Issue title",
      "minLength": 1,
      "maxLength": 256
    },
    "body": {
      "type": "string",
      "description": "Issue body/description"
    },
    "labels": {
      "type": "array",
      "description": "Issue labels",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "assignees": {
      "type": "array",
      "description": "Usernames to assign to the issue",
      "items": {
        "type": "string"
      }
    },
    "milestone": {
      "type": "integer",
      "description": "Milestone number to associate with the issue"
    }
  },
  "required": [
    "repository",
    "title"
  ],
  "additionalProperties": false
}