      },
      "governance-framework-baseline.json": {
        "description": "Governance baseline document",
        "location": "ecosystem/governance/gl-semantic-anchors/",
        "validation": "schema_validation"
      }
    },
    "artifact_validation": {
      "schema_validation": {
        "description": "Validate artifact structure against schema",
