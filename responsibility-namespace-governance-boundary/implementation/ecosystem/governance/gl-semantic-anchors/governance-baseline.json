      },
      "content_validation": {
        "description": "Validate artifact content completeness",
        "severity": "HIGH"
      },
      "integrity_validation": {
        "description": "Validate artifact integrity with checksums",
        "severity": "HIGH"
      }
    }
  },
  "GOVERNANCE_ROLES": {
    "governance_admin": {
      "description": "Administer governance framework and policies",
      "permissions": ["READ", "WRITE", "DELETE", "ENFORCE"]
    },
    "governance_auditor": {
      "description": "Audit compliance and generate reports",
      "permissions": ["READ", "AUDIT"]
