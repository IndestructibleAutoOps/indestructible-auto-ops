    "governance_enforcer": {
      "description": "Enforce governance rules and policies",
      "permissions": ["READ", "ENFORCE"]
    },
    "governance_user": {
      "description": "Use governance framework and submit artifacts",
      "permissions": ["READ", "SUBMIT"]
