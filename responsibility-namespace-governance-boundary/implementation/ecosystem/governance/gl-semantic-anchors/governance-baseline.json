{
  "GOVERNANCE_BASELINE": {
    "version": "1.0.0",
    "created": "2025-01-18T00:00:00Z",
    "status": "ACTIVE",
    "description": "MNGA Governance Baseline - Comprehensive governance framework for GL00-GL99 semantic anchors",
    "baseline_id": "GL-BASELINE-001"
  },
  "GOVERNANCE_PRINCIPLES": {
    "GP-001": {
      "name": "Semantic Precision",
      "description": "All GL definitions must be precise, unambiguous, and machine-readable",
      "applicable_scope": "GL00-GL99",
      "enforcement": "AUTOMATED"
    },
    "GP-002": {
      "name": "Layer Separation",
      "description": "Clear separation between language, format, and semantic layers",
      "applicable_scope": "GL00-GL99",
      "enforcement": "AUTOMATED"
    },
    "GP-003": {
      "name": "Validation Completeness",
      "description": "All artifacts must pass all applicable validation rules",
      "applicable_scope": "GL00-GL99",
      "enforcement": "AUTOMATED"
    },
    "GP-004": {
      "name": "Traceability",
      "description": "All governance decisions must be traceable and auditable",
      "applicable_scope": "GL00-GL99",
      "enforcement": "AUTOMATED"
    },
    "GP-005": {
      "name": "Backward Compatibility",
      "description": "All changes must maintain backward compatibility",
      "applicable_scope": "GL00-GL99",
      "enforcement": "AUTOMATED"
    }
  },
  "GOVERNANCE_ENFORCEMENT": {
    "enforcement_levels": {
      "CRITICAL": {
        "description": "Must pass before any operation",
        "action": "BLOCK",
        "applicable_rules": ["LRL-001", "LRL-002", "LRL-005", "FLR-001", "FLR-002", "FLR-004", "FLR-005", "SLR-003"]
      },
      "HIGH": {
        "description": "Should pass with clear justification for exceptions",
        "action": "WARN",
        "applicable_rules": ["LRL-003", "LRL-004", "FLR-003", "SLR-001", "SLR-002"]
      },
      "MEDIUM": {
        "description": "Recommended best practices",
        "action": "LOG",
        "applicable_rules": []
      },
      "LOW": {
        "description": "Informational only",
        "action": "INFO",
        "applicable_rules": []
      }
    },
    "enforcement_pipeline": [
      {
        "stage": "pre_validation",
        "description": "Validate before any processing",
        "checks": ["syntax_validation", "structure_validation"]
      },
      {
        "stage": "semantic_validation",
        "description": "Validate semantics and meaning",
        "checks": ["semantic_validation", "cross_layer_validation"]
      },
      {
        "stage": "compliance_validation",
        "description": "Validate compliance with governance requirements",
        "checks": ["compliance_validation"]
      },
      {
        "stage": "post_validation",
        "description": "Validate after processing",
        "checks": ["integrity_validation", "traceability_validation"]
      }
    ]
  },
  "GOVERNANCE_AUDIT": {
    "audit_frequency": "CONTINUOUS",
    "audit_scope": "GL00-GL99",
    "audit_types": {
      "syntax_audit": {
        "description": "Audit syntax compliance with language layer specifications",
        "frequency": "ON_COMMIT",
        "applicable_gl": ["GL00-GL09"]
      },
      "structure_audit": {
        "description": "Audit structure compliance with format layer specifications",
        "frequency": "ON_COMMIT",
        "applicable_gl": ["GL50-GL69"]
      },
      "semantic_audit": {
        "description": "Audit semantic consistency across all layers",
        "frequency": "ON_COMMIT",
        "applicable_gl": ["GL00-GL99"]
      },
      "compliance_audit": {
        "description": "Audit compliance with governance requirements",
        "frequency": "DAILY",
        "applicable_gl": ["GL00-GL99"]
      },
      "security_audit": {
        "description": "Audit security properties and vulnerabilities",
        "frequency": "WEEKLY",
        "applicable_gl": ["GL46", "GL96"]
      }
    },
    "audit_reporting": {
      "format": "JSON",
      "destination": "reports/audit/",
      "retention": "90_DAYS",
      "notification": "ON_FAILURE"
    }
  },
  "GOVERNANCE_ARTIFACTS": {
    "required_artifacts": {
      "GL00-GL99-unified-charter.json": {
        "description": "Unified charter for all GL semantic anchors",
