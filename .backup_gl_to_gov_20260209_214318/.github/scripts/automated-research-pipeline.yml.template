name: Automated Multi-Agent Research Pipeline

on:
  issues:
    types: [opened]
  workflow_dispatch:
    inputs:
      topic:
        description: 'Research Topic'
        required: true
        default: 'Future of AI Agents in DevOps'

jobs:
  research:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Run Auto-Orchestrator
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          chmod +x .github/scripts/auto-orchestrator.sh
          if [ "${{ github.event_name }}" == "issues" ]; then
            ./.github/scripts/auto-orchestrator.sh "${{ github.event.issue.title }}: ${{ github.event.issue.body }}"
          else
            ./.github/scripts/auto-orchestrator.sh "${{ github.event.inputs.topic }}"
          fi

