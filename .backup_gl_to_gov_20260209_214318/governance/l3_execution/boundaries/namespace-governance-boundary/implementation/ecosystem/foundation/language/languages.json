{
  "version": "1.0.0",
  "description": "Language Layer Specification - Defines all languages used in the governance ecosystem",
  "purpose": "Language layer defines the language foundation for all files, rules, contracts, indices, evidence, topology, and executors",
  "requirements": {
    "parseable": "All languages must be parseable",
    "validatable": "All languages must be validatable",
    "serializable": "All languages must be serializable",
    "governable": "All languages must be governable",
    "evolvable": "All languages must be evolvable"
  },
  "languages": [
    {
      "id": "yaml",
      "name": "YAML",
      "purpose": ["metadata", "spec", "index", "governance rules"],
      "parser": "PyYAML (restricted)",
      "hasAST": true,
      "governability": "high",
      "fileExtensions": [".yaml", ".yml"],
      "allowed": {
        "features": [
          "key-value",
          "list",
          "nested structure",
          "string",
          "number",
          "boolean",
          "multi-line string (with explicit markers)"
        ]
      },
      "prohibited": {
        "features": [
          "anchors",
          "references",
          "arbitrary Python objects",
          "arbitrary tags",
          "custom types"
        ],
        "reason": "Governance requires predictability and verifiability; YAML magic features are disabled"
      },
      "validationRules": {
        "noAnchors": true,
        "noReferences": true,
        "noCustomTags": true,
        "safeLoad": true
      }
    },
    {
      "id": "json",
      "name": "JSON",
      "purpose": ["gl.meta.json", "semantic-index.json"],
      "parser": "Python json",
      "hasAST": true,
      "governability": "high",
      "fileExtensions": [".json"],
      "allowed": {
        "features": [
          "object",
          "array",
          "string",
          "number",
          "boolean",
          "null"
        ]
      },
      "prohibited": {
        "features": [
          "comments",
          "trailing comma",
          "non-UTF-8 encoding"
        ],
        "reason": "JSON is the core governance format; must maintain purity and machine verifiability"
      },
      "validationRules": {
        "strictParsing": true,
        "utf8Only": true,
        "noComments": true
      }
    },
    {
      "id": "markdown",
      "name": "Markdown",
      "purpose": ["spec documents", "documentation"],
      "parser": "markdown-it",
      "hasAST": false,
      "governability": "medium",
      "fileExtensions": [".md", ".markdown"],
      "allowed": {
        "features": [
          "headings (# to ######)",
          "code blocks",
          "lists",
          "tables",
          "inline code",
          "links",
          "emphasis"
        ]
      },
      "prohibited": {
        "features": [
          "HTML",
          "script",
          "iframe",
          "embedded objects"
        ],
        "reason": "Markdown is for spec documents, not execution environments"
      },
      "validationRules": {
        "noHTML": true,
        "noScripts": true,
        "noIframes": true
      }
    },
    {
      "id": "python",
      "name": "Python",
      "purpose": ["enforcer", "governance executor"],
      "parser": "CPython AST",
      "hasAST": true,
      "governability": "high",
      "fileExtensions": [".py"],
      "allowed": {
        "features": [
          "AST-safe Python",
          "side-effect-free functions",
          "pure functions"
        ]
      },
      "prohibited": {
        "features": [
          "I/O operations",
          "network access",
          "file writes",
          "exec/eval",
          "subprocess calls"
        ],
        "reason": "Governance executors must be pure functions"
      },
      "validationRules": {
        "noIO": true,
        "noNetwork": true,
        "noFileWrite": true,
        "noExec": true,
        "noSubprocess": true
      }
    },
    {
      "id": "gov-dsl",
      "name": "GL-DSL",
      "purpose": ["future governance language"],
      "parser": "custom parser",
      "hasAST": true,
      "governability": "very high",
      "fileExtensions": [".gl", ".gldsl"],
      "allowed": {
        "keywords": [
          "rule",
          "constraint",
          "verify",
          "emit",
          "evidence",
          "contract",
          "adapter"
        ]
      },
      "prohibited": {
        "features": [
          "arbitrary code execution",
          "external imports"
        ],
        "reason": "DSL is for governance definitions only"
      },
      "validationRules": {
        "keywordsOnly": true,
        "noExternalImports": true
      },
      "status": "planned"
    }
  ],
  "metadata": {
    "created": "2026-02-03T04:10:00Z",
    "layer": "GL00-09",
    "semantic": "language-foundation"
  }
}
