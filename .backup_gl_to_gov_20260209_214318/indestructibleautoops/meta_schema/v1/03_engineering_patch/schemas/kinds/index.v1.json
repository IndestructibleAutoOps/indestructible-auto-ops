{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://indestructibleautoops.com/schemas/kinds/index/v1.json",
  "title": "IndestructibleAutoOps Kind Index v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["kinds"],
  "properties": {
    "kinds": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "MetaSchema",
          "NamingConvention",
          "SecurityPolicy",
          "ComplianceFramework",
          "ChangeManagement",
          "ResourceQuota",
          "Monitoring",
          "Logging",
          "BackupStrategy",
          "NetworkPolicy",
          "CostOptimization",
          "AccessControl",
          "DataGovernance",
          "AuditPolicy",
          "DisasterRecovery",
          "EmergencyManagement"
        ]
      }
    }
  }
}
