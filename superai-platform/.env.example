# ============================================================================
# SuperAI Platform - Environment Configuration
# Copy to .env and modify for your environment
# ============================================================================

# --- Application ---
APP_ENV=development
APP_PORT=8000
APP_WORKERS=2
APP_DEBUG=true
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-64
LOG_LEVEL=info

# --- Database ---
DATABASE_URL=postgresql+asyncpg://superai:superai_secret@localhost:5432/superai_db
DATABASE_URL_SYNC=postgresql://superai:superai_secret@localhost:5432/superai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=superai_redis_secret

# --- Celery ---
CELERY_BROKER_URL=amqp://superai:superai_secret@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- JWT ---
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-64
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# --- Elasticsearch ---
ELASTICSEARCH_URL=http://localhost:9200

# --- Quantum Computing ---
QUANTUM_BACKEND=aer_simulator
QUANTUM_SHOTS=1024
QUANTUM_IBM_TOKEN=
QUANTUM_IBM_INSTANCE=

# --- AI / LLM ---
AI_OPENAI_API_KEY=
AI_OPENAI_MODEL=gpt-4-turbo-preview
AI_EMBEDDING_MODEL=text-embedding-3-small
AI_CHROMADB_HOST=localhost
AI_CHROMADB_PORT=8100

# --- Monitoring ---
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_TRACING_ENABLED=true
MONITORING_JAEGER_ENDPOINT=http://localhost:4317

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000