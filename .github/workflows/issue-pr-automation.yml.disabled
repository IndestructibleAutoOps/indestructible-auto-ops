---
name: Issue & PR Automation Suite

'on':
  issues:
    types: [opened, edited, closed, reopened, labeled, unlabeled]
  pull_request:
    types: [opened, edited, closed, reopened, labeled, unlabeled, synchronize]

permissions:
  contents: read
  issues: write
  pull-requests: write

jobs:
  automation:
    name: Issue & PR Automation
    runs-on: ubuntu-latest

    steps:
      - name: Issue & PR Automation Suite
        uses: SillyLittleTech/AutomationSuite@0.1
